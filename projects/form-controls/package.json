  "main": "dist/libs/form-controls/index.d.ts",
  "module": "dist/libs/form-controls/index.mjs",
  "types": "dist/libs/form-controls/index.d.ts",
  "peerDependencies": {
    "@angular/forms": "^19.2.0",
    "@angular/core": "^19.2.0",
